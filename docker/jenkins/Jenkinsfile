pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "seung9526/private_cloud_app"
        REGISTRY_CREDENTIAL = "dockerhub-credentials"
        SONAR_HOST_URL = "http://192.168.119.135:9001"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/seung9526/private_cloud_ubuntu.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'tonarqube-token', variable: 'SONAR_TOKEN')]) {
                    sh '''
                        docker run --rm \
                            --network host \
                            -v $(pwd):/usr/src \
                            -w /usr/src \
                            sonarsource/sonar-scanner-cli \
                            -Dsonar.projectKey=private_cloud_ubuntu \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_TOKEN}
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build --network=host -t $DOCKER_IMAGE:latest .'
                }
            }
        }

        stage('Ensure DockerHub Repo') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIAL}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "üîç Checking if DockerHub repo exists..."
                            RESPONSE=$(curl -s -o /dev/null -w "%{http_code}" -u "$DOCKER_USER:$DOCKER_PASS" \
                                https://hub.docker.com/v2/repositories/$DOCKER_USER/private_cloud_app/)

                            if [ "$RESPONSE" -eq 404 ]; then
                                echo "üì¶ Repo not found. Creating new repo..."
                                curl -s -X POST -H "Content-Type: application/json" \
                                    -u "$DOCKER_USER:$DOCKER_PASS" \
                                    -d '{"name": "private_cloud_app", "is_private": true}' \
                                    https://hub.docker.com/v2/repositories/
                                echo "‚úÖ Repo created."
                            else
                                echo "‚úÖ Repo already exists."
                            fi
                        '''
                    }
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIAL}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "üîê Logging into DockerHub..."
                            docker login -u "$DOCKER_USER" -p "$DOCKER_PASS"
                            echo "üöÄ Pushing image to DockerHub..."
                            docker push $DOCKER_IMAGE:latest
                            docker logout
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'trivy-report.txt', allowEmptyArchive: true
        }
    }
}
